@model TextPlagiarismWebApp.Models.Assignment

@{
    ViewBag.Title = "AssignmentDetails";
}

<h2>@Model.Name</h2>

<div>
    <h4>@Model.Description</h4>
    <h5>@Model.TimeCreated</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Time Due:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeDue)
        </dd>
        <dt>
            @Html.DisplayName("Weight:")
        </dt>

        <dd>
            @Html.DisplayName(@Model.Weight +"%")
        </dd>
        <dt>
            @Html.DisplayName("Total Submissions:")
        </dt>

        <dd>
            @Html.DisplayName(Model.Submissions.Count() + " Submission")
        </dd>

        <p>
        <p></p>
        <a href=@Url.Action("UploadSubmission", "Submissions" , new { id = Model.Id }) class="btn btn-primary btn-lg">Submit »</a></p>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
